{
  "name": "rs-rest-service-starter",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": ""
  },
  "description": "REST service starter for RS School - trello clone",
  "main": "server.js",
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc",
    "start:fast": "npm run build && npm run start",
    "dev": "nodemon -L src/server.ts",
    "lint": "eslint --ext .js,.ts --fix src/",
    "test": "cross-env DEBUG=rs:* jest --testMatch \"<rootDir>/test/e2e/test/*.test.js\" --noStackTrace --runInBand",
    "test:auth": "cross-env DEBUG=rs:* TEST_MODE=auth jest --noStackTrace",
    "server": "ts-node-dev --respawn --transpile-only ./src/server.ts",
    "docker:up": "docker-compose up --build",
    "clean": "docker-compose down && docker system prune --volumes -af",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js -f ./ormconfig.ts",
    "typeorm:cli": "ts-node --transpile-only ./node_modules/typeorm/cli.js -f ./ormconfig.ts",
    "migration:generate": "npm run typeorm migration:generate -- -n trelloCloneMigration -p",
    "generate": "ts-node --transpile-only ./node_modules/typeorm/cli.js migration:generate -n migrationTrello -p",
    "migration:run": "npm run build && npm run typeorm -c postgres -- migration:run"
  },
  "keywords": [
    "rs",
    "school",
    "rest",
    "node",
    "fastify",
    "autotest",
    "TypeScript",
    "starter"
  ],
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0 <17"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./test/setup.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint"
    ]
  },
  "dependencies": {
    "@types/pg": "^8.6.4",
    "@types/uuid": "^8.3.3",
    "ajv": "^8.9.0",
    "bcryptjs": "^2.4.3",
    "cross-env": "7.0.3",
    "dotenv": "10.0.0",
    "fastify": "^3.24.1",
    "fastify-jwt": "^4.1.3",
    "fastify-plugin": "^3.0.0",
    "fastify-swagger": "^4.12.6",
    "nodemon": "2.0.15",
    "pg": "^8.7.1",
    "pino": "^7.6.0",
    "pino-pretty": "^7.3.0",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.4.0",
    "typeorm": "^0.2.41",
    "typescript": "^4.5.2",
    "uuid": "8.3.2",
    "yamljs": "0.3.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/node": "^16.11.12",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "chai": "4.3.4",
    "debug": "4.3.2",
    "dirty-chai": "2.0.1",
    "eslint": "8.2.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "husky": "^4.3.8",
    "jest": "27.3.1",
    "lint-staged": "12.0.3",
    "prettier": "2.4.1",
    "supertest": "6.1.6",
    "ts-node-dev": "^1.1.8",
    "typedoc": "^0.22.10"
  }
}
